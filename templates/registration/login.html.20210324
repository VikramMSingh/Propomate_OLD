{% extends 'base.html' %}

{% load tailwind_filters %}

{% block content %}
<div class='max-w-lg mx-auto'>
<form method="post">
	{% csrf_token %}
	{{ form|crispy }}
	<button type='submit' class="w-full text-white bg-blue-100 hover:bg-blue-300 px-3 py-2 rounded-md">Login</button>
</form>
<div class="py-5 border-t border-gray-200 mt-5">
        <a class="hover:text-blue-500" href="{% url 'reset-password' %}">Reset password</a>
    </div>
</div>


{% endblock content %}