{% extends 'base.html' %}

{% block content %}
<div class="max-w-lg mx-auto">
    <h1 class="text-4xl text-gray-800">Enter your new password</h1>


<form method="post">
	{% csrf_token %}
	{{ form.as_p }}
	<button type='submit'>Confirm new password</button>
</form>
<hr />
<a href="{% url 'login' %}"> Go back to login </a>

{% endblock content %}